---
title: Blog
---

{% extends "page.njk" %}

{% block pageContent %}
	{% for post in collections.posts %}
		<div class="box">
			<div class="content">
				<h2 class="title"><a href="/{{ post.path }}">{{ post.title }}</a></h2>
				<p>{{ post.summary }}</p>
				<p>{{ post.publishDate }}</p>
			</div>
		</div>
	{% endfor %}
{% endblock %}
